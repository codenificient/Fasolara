{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["cypress", "@testing-library/cypress"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@h/*": ["app/*"],
      "@c/*": ["components/*"],
      "@chart/*": ["components/charts/*"],
      "@ui/*": ["components/UI/*"],
      "@em/*": ["components/email/*"],
      "@data/*": ["components/data/*"],
      "@proj/*": ["components/projects/*"],
      "@msg/*": ["components/messages/*"],
      "@usr/*": ["components/users/*"],
      "@cs/*": ["styles/pages/*"],
      "@s/*": ["styles/*"],
      "@css/*": ["styles/components/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
  ],
  "exclude": ["node_modules"],
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "semi": false
  }
}
